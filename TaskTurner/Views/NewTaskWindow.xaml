<Window x:Class="TaskTurner.Views.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TaskTurner.Views"
        mc:Ignorable="d"
        Title="NewTaskWindow" Height="480" Width="340"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <!--Title-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="TitleBox" 
                     Style="{StaticResource NewTaskWindowTextbox}"
                     Margin="10 10 0 0 " 
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged }"/>
            
            <Label IsHitTestVisible="False"
                   Content="Title..."
                   VerticalAlignment="Center"
                   Margin="15 10 0 0"
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=TitleBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <ComboBox Grid.Column="1"
                      Margin="10 10 10 0"></ComboBox>
        </Grid>
        
        <!--Description-->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <TextBox Grid.Row="1" x:Name="Description"
                     Style="{StaticResource NewTaskWindowDescription}"
                     TextWrapping="Wrap"
                     BorderThickness="1"
                     Margin="10 10 10 0"
                     VerticalContentAlignment="Top"
                     HorizontalContentAlignment="Left"
                     BorderBrush="{StaticResource Borders}" 
                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
        </ScrollViewer>
        <Label Grid.Row="1"
               IsHitTestVisible="False"
               Content="Description..."
               FontSize="12"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               FontWeight="Normal"
               Foreground="{StaticResource Borders}"
               Margin="10 10 10 0"
               Visibility="{Binding Text.IsEmpty, ElementName=Description, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        
        <!--Subtask adding-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="SubtaskBox" 
                     Style="{StaticResource NewTaskWindowTextbox}"
                     Margin="10 10 0 0 " />
            
            <Label IsHitTestVisible="False"
                   Content="Subtask..."
                   VerticalAlignment="Center"
                   Margin="15 10 0 0"
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=SubtaskBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Button Grid.Column="1"
                        Margin="0 10 10 0"
                        HorizontalAlignment="Right"
                        Height="30"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        Background="Transparent"
                        Width="30">
            </Button>
        </Grid>

        <Border Grid.Row="3"
                BorderThickness="1"
                BorderBrush="LightGray"
                Margin="10 10 10 10">
            <TextBlock Margin="10" />
        </Border>
        
        <StackPanel Grid.Row="4">
            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left">
                <TextBlock Text="Due: " Margin="5 0 0 0"
                           VerticalAlignment="Center"/>
                <DatePicker Margin="5 0 0 0" SelectedDate="{Binding DueDate, UpdateSourceTrigger=PropertyChanged}"/>
                <ComboBox SelectedIndex="0" MinWidth="60"
                          Margin = "20 0 0 0"/>
                <TextBlock Text=":" Margin="8 0 0 0"/>
                <ComboBox SelectedIndex="0" MinWidth="60"
                          Margin = "10 0 0 0"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="5">
            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 0"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left">
                <CheckBox Margin="8 10 0 0"/>
                <TextBlock Text="Include Timer"
                           Margin = "10 10 0 0"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="6">
            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left">
                <CheckBox Margin="8 0 0 0"/>
                <TextBlock Text="Add task to your calendar"
                           Margin = "10 0 0 0"/>
            </StackPanel>
        </StackPanel>
        
        <Button Grid.Row="7"
                Style="{StaticResource NewTaskAddButton}"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Width="70"
                Height="20"
                Margin = "0 0 10 10">
                <TextBlock  Margin = "5 0 0 0"
                        Height="20"
                        FontSize="9"
                        Width = "50"
                        Text="Add"
                        VerticalAlignment="Top"/>
        </Button>
    </Grid>    
</Window>
