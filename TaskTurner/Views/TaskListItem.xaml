<UserControl x:Class="TaskTurner.Views.TaskListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TaskTurner.Views"
             mc:Ignorable="d"
             d:DesignHeight="145" d:DesignWidth="435">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        
        <TextBlock Text="Title"
                   Style="{StaticResource Title}"
                   Margin="20 0 "
                   VerticalAlignment="Center"
                   Foreground="{StaticResource TaskListDescriptionTitle}"/>
        
        <!--Importance Badge-->
        <Border CornerRadius="3"
                Background="{StaticResource PlaceholderBorder}"
                Height="23"
                HorizontalAlignment="Right"
                Padding="40 0"
                Margin="0 0 20 0">
            <TextBlock Text="Importance"
                       Foreground="{StaticResource PlaceholderBorderText}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"></TextBlock>
        </Border>
        <!--Description-->
        <TextBlock Text="Lower text lower text lower text"
                   TextWrapping="Wrap"
                   Grid.Row="1"
                   Margin="20 5 0 0"
                   Foreground="{StaticResource TaskListDescriptionText}"/>
        
        <!--Due Date-->
        <TextBlock Text="Due: 23/12/2025"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   Margin="20 0"
                   Foreground="{StaticResource TaskListDescriptionText}"/>
    </Grid>
</UserControl>
