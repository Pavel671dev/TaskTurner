<Window x:Class="TaskTurner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TaskTurner"
        xmlns:viewModel="clr-namespace:TaskTurner.ViewModel"
        mc:Ignorable="d"
        MinWidth="1150"
        MaxWidth="1280"
        MinHeight="500"
        MaxHeight="720"
        Title="MainWindow" Height="720" Width="1280">
    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Storyboard x:Key="SlideOnLoad">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0.0" To="1.0" Duration="0:0:1">
            </DoubleAnimation>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                From="0,100,0,0" To="0,0,0,0" Duration="0:0:1">
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>
    
    <Grid Opacity="1" Margin="0 0 0 0">
        <Grid.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard Storyboard="{StaticResource SlideOnLoad}"/>
            </EventTrigger>
        </Grid.Triggers>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="435" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="140" />
        </Grid.ColumnDefinitions>

        <!--Navigation Panel-->
        <Rectangle Fill="{StaticResource AccentDark}" />
        <StackPanel Margin="10 15 10 10">
            <Button Style="{StaticResource TaskManagerNavigationButton}">
                <Viewbox Width="30"
                         Height="30">
                    <Path Data="{StaticResource NavIcon}" Fill="White"/>
                </Viewbox>
            </Button>
            
            <Button Style="{StaticResource TaskManagerNavigationButton}">
                <Viewbox Width="30"
                         Height="30">
                    <Path Data="{StaticResource TickIcon}" Fill="White"/>
                </Viewbox>
            </Button>
            
            <Button Style="{StaticResource TaskManagerNavigationButton}">
                <Viewbox Width="35"
                         Height="35">
                    <Path Data="{StaticResource ClocksIcon}" Fill="White"/>
                </Viewbox>
            </Button>
        </StackPanel>
        
        <!--Task List Background-->
        <Rectangle Fill="{StaticResource TaskListBackground}"
                   Grid.Column="1" />

        <!--Task List Grid-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="40" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid />

            <Label Style="{StaticResource Heading1}"
                   Content="Tasks"
                   VerticalAlignment="Center"
                   Padding="20 0 0 0"
                   Height="40"
                   FontSize="28"
                   IsHitTestVisible="False" />

            <!-- Add new task button-->
            <Button Style="{StaticResource RoundAccentButton}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Height="40"
                    Width="40"
                    Margin="0 0 20 0"
                    Command="{Binding IOpenNewWindowCommand}">
                <Button.DataContext>
                    <viewModel:MainWindowViewModel/>
                </Button.DataContext>
                <Viewbox Width="20" Height="20">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}" />
                </Viewbox>
            </Button>

            <TextBox x:Name="TaskSearchBox" 
                    Style="{StaticResource TaskListSearchBox}"
                     Grid.Row="1"
                     Margin="20 0" />
            
            <Label IsHitTestVisible="False"
                   Content="Search tasks..."
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   Margin="32 0 0 0"
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskSearchBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    
            
            <Button Style="{StaticResource SearchButton}"
                    Grid.Row="1" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 0 40 0"
                    Padding="5"
                    Background="Transparent"
                    BorderBrush="Transparent">
                
                <Viewbox Width="22" Height="22">
                    <Image Source="/Assets/Images/looking_glass_icon.png" />
                </Viewbox>
            </Button>
            
            <ListView Grid.Row="2"
                      Background="Transparent"
                      Margin="0 20">
            </ListView>
        </Grid>
        
        <!--Task Viewer-->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Task Title"
                           Style="{StaticResource Title}"
                           Height="24"
                           FontSize="20"
                           VerticalAlignment="Center"/>
                
                <Border HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="20 5"
                        CornerRadius="5"
                        Background="{StaticResource LowImportance}">
                    <TextBlock Text="Critical"
                               Foreground="{StaticResource OnAccent}"
                               FontWeight="Semibold">
                    </TextBlock>
                </Border>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <TextBlock Text="This is a short description test"
                               TextWrapping="Wrap"
                               Grid.Row="1"
                               FontSize="16"
                               Foreground="{StaticResource PlaceholderText}"
                               Margin="0 20">
                    </TextBlock>
                </ScrollViewer>
                
                <TextBlock Text="Due: 17/23/2023"
                           Background="{StaticResource AccentDark}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Grid.Row="2"
                           Foreground="White"
                           Padding="20 3"/>
            </Grid>

            <Grid Grid.Row="1"
                  Margin="0 20 0 0 ">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                    <TextBlock Style="{StaticResource Title}"
                               Text="Task Check List"
                               VerticalAlignment="Center"
                               Margin="20 0 0 0"/>
                    <ListView Grid.Row="1"
                          Background="Transparent"
                          BorderThickness="0">
                    </ListView>
            </Grid>

            <!--Action Buttons-->
            <Grid Grid.Row="2">
                <Button Style="{StaticResource TaskViewDeleteButton}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Width="140"
                        Height="30"
                        Margin = "20 0 0 0">
                    <TextBlock Text="Delete"
                               Style="{StaticResource ActionButtons}"
                               Margin = "27 0 0 0 "/>
                </Button>
                <Button Style="{StaticResource TaskViewEditButton}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="120"
                        Height="30">
                    <TextBlock Text="Edit"
                               Style="{StaticResource ActionButtons}"/>
                </Button>
                <Button Style="{StaticResource TaskViewCompleteButton}"
                        Width="140"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin = "0 0 20 0">
                    <TextBlock Text="Complete"
                               Style="{StaticResource ActionButtons}"
                               Margin = "0 0 15 0 "/>
                </Button>
            </Grid>
        </Grid>
        <Rectangle Fill="{StaticResource TaskStatusBackground}"
                   Grid.Column="3" />
        
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="140"/>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>

</Window>